{
  "$schema": "https://turborepo.org/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "db:generate": {
      "persistent": true,
      "cache": false
    },
    "db:push": {
      "persistent": true,
      "cache": false
    },
    "db:studio": {
      "persistent": true,
      "cache": false
    },
    "db:seed": {
      "persistent": true,
      "cache": false
    }
  },
  "globalEnv": [
    "VERCEL_URL",
    "PORT",
    "NODE_ENV",
    "DATABASE_URL",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "SKIP_ENV_VALIDATION",
    "GEMINI_AI_API_KEY",
    "LOCAL_FETCH_PROXY",
    "GITHUB_TOKEN",
    "LOG_LEVEL"
  ]
}
